<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TopicsFragment">

    <fragment
        android:id="@+id/TopicsFragment"
        android:name="com.n27.nutshell.presentation.topics.TopicsFragment"
        android:label="@string/topics_fragment_label"
        tools:layout="@layout/fragment_topics">

        <action
            android:id="@+id/action_TopicsFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.n27.nutshell.presentation.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_TopicsFragment"
            app:destination="@id/TopicsFragment" />
    </fragment>
</navigation>